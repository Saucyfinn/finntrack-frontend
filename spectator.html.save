  function initMap() {
    map = L.map("map").setView([0, 0], 3);
    L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
      attribution: "&copy; OpenStreetMap contributors"
    }).addTo(map);

    polyline = L.polyline([], { color: "blue", weight: 4 }).addTo(map);
  }

  async function loadFullTrack() {
    const res = await fetch(`${API_BASE}/share/${shareCode}/points?limit=5000`);
    const data = await res.json();
    if (!data.ok || !data.points) return;

    const latlngs = data.points.map(p => [p.lat, p.lon]);
    polyline.setLatLngs(latlngs);

    if (latlngs.length > 0) {
      map.fitBounds(latlngs, { padding: [30, 30] });
    }
  }

